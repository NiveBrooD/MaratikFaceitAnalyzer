<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1767702448567-1" author="Ramis">
        <createTable tableName="stats">
            <column name="id"
                    type="bigserial"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="stats_pk"
                             nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"
                             unique="true"/>
            </column>
            <column name="games_played" type="int"/>
            <column name="wins" type="int"/>
            <column name="loss" type="int"/>
            <column name="avg_kd" type="DOUBLE PRECISION"/>
            <column name="avg_adr" type="DOUBLE PRECISION"/>
            <column name="avg_kills" type="DOUBLE PRECISION"/>
            <column name="avg_deaths" type="DOUBLE PRECISION"/>
            <column name="avg_assists" type="DOUBLE PRECISION"/>
            <column name="avg_headshots" type="DOUBLE PRECISION"/>
            <column name="avg_double_kills" type="DOUBLE PRECISION"/>
            <column name="avg_triple_kills" type="DOUBLE PRECISION"/>
            <column name="avg_quadro_kills" type="DOUBLE PRECISION"/>
            <column name="avg_penta_kills" type="DOUBLE PRECISION"/>
        </createTable>
    </changeSet>
</databaseChangeLog>