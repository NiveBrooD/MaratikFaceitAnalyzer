<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1767703259632-1" author="Ramis">
        <createTable tableName="stats_matches">
            <column name="stats_id" type="bigint"/>
            <column name="match_id" type="varchar"/>
            <column name="matches_order" type="int"/>
        </createTable>
    </changeSet>

    <changeSet id="1767703361836-1" author="Ramis">
        <addForeignKeyConstraint baseTableName="stats_matches"
                                 baseColumnNames="stats_id"
                                 constraintName="stats_matches_stats_fk"
                                 referencedTableName="stats"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>